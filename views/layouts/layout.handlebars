<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{pagina}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/app.css">
  <link rel="stylesheet" type="text/css" href="https://unpkg.com/trix@2.0.0/dist/trix.css">
</head>
<body>
  <div class="nombre-sitio contenedor">
    <h1><a href="/">DevJobs</a></h1>
    {{#if barra}}
      <div class="buscador">
        <form action="/buscador" method="POST">
          <input type="text" name="q" class="buscar">
          <input type="submit" value="Buscar">
        </form>
      </div>
    {{/if}}
    
    {{#if salir}}
      <div class="cerrar-sesion">
        <p>{{nombre}}</p>
        {{#if imagen}}
          <img src="/uploads/perfiles/{{imagen}}" alt="" class="admin-perfil">
        {{/if}}
        <a href="/admin">Mis vacantes</a>
        <a href="/cerrar-sesion">Salir</a></div>
    {{/if}}
  </div>

  <header class="site-header contenedor separador">
    <h2>{{pagina}}</h2>

    {{#if tagline}}
      <p class="tagline">{{tagline}}</p>{{/if}}
    {{#if boton}}
      <a href="/vacantes/nueva" class="btn btn-azul">
        Nueva Vacante</a>{{/if}}
  </header>

  <div class="contenido-principal contenedor">
    {{#if mensajes}}
      <div class="alertas">
        {{#mostrarAlertas mensajes}}{{/mostrarAlertas}}
      </div>
    {{/if}}

    {{{body}}}
  </div>
  
  <script type="text/javascript" src="https://unpkg.com/trix@2.0.0/dist/trix.umd.min.js"></script>
  <script type="text/javascript" src="/dist/bundle.js"></script>
</body>
</html>