<main class="contenedor">
  <form action="/iniciar-sesion" method="POST" class="default-form">
    <div class="campo">
      <label for="email">Correo</label>
      <input type="email" name="email" placeholder="Correo" required></div>

    <div class="campo">
      <label for="password">Contraseña</label>
      <input type="password" name="password" placeholder="Contraseña"></div>

    <div class="campo acciones">
      <a href="/crear-cuenta">Crear Cuenta</a>
      <a href="/recuperar-cuenta">Olvidé mi Contraseña</a></div>

    <div class="campo">
      <input type="submit" value="Crear Cuenta" class="btn btn-azul">
    </div>
  </form>
</main>