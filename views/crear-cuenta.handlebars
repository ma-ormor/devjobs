<main class="contenedor">
  <form action="/crear-cuenta" method="POST" class="default-form">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" placeholder="Nombre"></div>
    <div class="campo">
      <label for="email">Correo</label>
      <input type="email" name="email" placeholder="Correo"></div>
    <div class="campo">
      <label for="password">Contraseña</label>
      <input type="password" name="password" placeholder="Contraseña"></div>
    <div class="campo">
      <label for="repetir">Repetir Contraseña</label>
      <input type="password" name="repetir" placeholder="Repetir Contraseña"></div>
    <div class="campo acciones">
      <a href="/iniciar-sesion">Iniciar Sesión</a></div>
    <div class="campo">
      <input type="submit" value="Crear Cuenta" class="btn btn-azul">
    </div>
  </form>
</main>