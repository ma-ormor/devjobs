<main class="contenedor">
  <form method="POST" class="default-form" enctype="multipart/form-data">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input 
        value="{{usuario.nombre}}"
        type="text" 
        name="nombre" 
        id="nombre" 
        placeholder="Tu nombre"></div>

    <div class="campo">
      <label for="email">Correo</label>
      <input 
        value="{{usuario.email}}"
        type="text" 
        name="email" 
        id="email" 
        placeholder="Tu correo"></div>

    <div class="campo">
      <label for="password">Contraseña</label>
      <input type="text" name="password" id="password"></div>

    <div class="campo">
      <label for="imagen">Imagen</label>
      <input type="file" name="imagen" id="imagen", placeholder="Imagen de Pérfil">
      <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
    </div>

    <div class="campo">
      <input type="submit" value="Guardar" class="btn btn-azul">
    </div>
  </form>
</main>